@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<WorkListDto>
<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto d-block">
            <a asp-action="Created" asp-controller="Home">
                Yeni Oluştur
            </a>
            <table class="table table-striped table-sm">
                <thead>
                    <tr>
                        <td></td>
                        <td></td>
                        <td>Güncelle</td>
                        <td>Sil</td>
                    </tr>
                </thead>

                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Definition</td>
                            <td>@(item.IsCompleted ? "Tamamlandı" : "Tamamlanmadı")</td>
                            <td>
                                <a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Güncelle</a>
                            </td>
                            <td>
                                <a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Sil</a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>

        </div>
    </div>
</div>